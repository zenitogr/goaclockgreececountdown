{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PhantomTimeR",
  "version": "0.1.0",
  "identifier": "com.zengo.phantomtimer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PhantomTimeR",
        "width": 380,
        "height": 240,
        "minWidth": 380,
        "minHeight": 240,
        "transparent": true,
        "alwaysOnTop": true,
        "focusable": true,
        "decorations": false,
        "skipTaskbar": true,
        "resizable": true,
        "x": -300,
        "y": 0
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}